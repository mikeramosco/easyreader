<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/maxWordsPrompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:layout_margin="@dimen/_15sdp"
        android:gravity="center"
        android:layout_gravity="center"
        android:textSize="@dimen/_14sdp"
        android:text="@string/maxWordsSettingPrompt"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_marginRight="@dimen/_8sdp"
        android:layout_marginLeft="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_25sdp"
        android:layout_marginBottom="@dimen/_60sdp">

        <TextView
            android:id="@+id/errorMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:textColor="@android:color/holo_red_light"
            android:layout_margin="@dimen/_4sdp"
            android:textSize="@dimen/_14sdp"
            android:text="@string/maxWordsInvalidMessage"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <EditText
                android:id="@+id/enteredMaxWords"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/_8sdp"
                android:padding="@dimen/_8sdp"
                android:background="@drawable/widget_outline"
                android:digits="0123456789"
                android:inputType="number"
                android:maxLines="1"
                android:textSize="@dimen/_12sdp" />

            <Button
                android:id="@+id/saveButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/saveString"
                android:textColor="@android:color/white"
                android:paddingLeft="@dimen/_10sdp"
                android:paddingRight="@dimen/_10sdp"
                android:textSize="@dimen/_14sdp"
                android:textAllCaps="false"
                android:background="@drawable/rounded_button"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>